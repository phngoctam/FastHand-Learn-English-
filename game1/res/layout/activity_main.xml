<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.game1.MainActivity" >

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btnReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtQuestion"
        android:layout_centerHorizontal="true"
        android:text="Review" />

    <Button
        android:id="@+id/btnFast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnReview"
        android:layout_below="@+id/btnReview"
        android:layout_marginTop="21dp"
        android:text="Fast" />

    <Button
        android:id="@+id/btnSlow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnFast"
        android:layout_below="@+id/btnFast"
        android:layout_marginTop="51dp"
        android:text="Slow" />

    <Button
        android:id="@+id/buttonInsertWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSlow"
        android:layout_below="@+id/btnSlow"
        android:layout_marginTop="36dp"
        android:text="Button" />

</RelativeLayout>